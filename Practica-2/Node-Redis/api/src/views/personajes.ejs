<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Star Wars</title>
</head>
<body>
    <%- include('./partials/header') %>

    <!--Lista de personajes por episodio-->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-4">
                <table class="table">
                    <thead>
                        <tr>
                          <th class="text-center">PERSONAJES</th>
                        </tr>
                    </thead>
                  <% personajes.forEach( personaje => { if(personaje !== "")%>
                    <tr>
                        <td>
                            <%= personaje %>
                        </td>
                    </tr>
                  <% }) %>
                </div>
                </table>
                <div class="d-grid gap-2">
                    <a class="btn btn-primary mt-3" href="/" style="text-decoration: none; color: white; background-color: #205375; border-color: #205375">Volver</a>
                </div>
        </div>
    </div>
    
    
</body>
</html>

